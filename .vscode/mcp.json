{
    "servers": {
        "memory": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-v",
                "/local-directory:/local-directory",
                "mcp/memory"
            ]
        },
        "sequentialthinking": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "mcp/sequentialthinking"
            ]
        },
        "chroma": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "CHROMA_API_KEY",
                "mcp/chroma"
            ],
            "env": {
                "CHROMA_API_KEY": "your-api-key"
            }
        }
    }
}